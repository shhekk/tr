{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@tr/api",
  "projectType": "application",
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "dependsOn": ["^build"],
      "cache": true,
      "options": {
        "target": "node",
        "inspect": false,
        "generatePackageJson": true,
        "main": "apps/api/src/main.ts",
        "webpackConfig": "apps/api/webpack.config.js",
        "outputPath": "apps/api/dist",
        "compiler": "swc",
        "sourceMap": true,
        "skipTypeChecking": true,
        "tsConfig": "apps/api/tsconfig.app.json",
        "why-tsconfig": "// @nx/webpack need to know what to build and what to exclude",
        "//": "the tsconf & webpackConf does not matter *default already applied with withNx"
      },
      "configurations": {
        "production": {
          "skipTypeChecking": false,
          "optimization": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@tr/api:build",
        "watch": true,
        "port": 9229
      },
      "configurations": {
        "production": {
          "buildTarget": "@tr/api:build:production"
        }
      }
    }
  }
}
